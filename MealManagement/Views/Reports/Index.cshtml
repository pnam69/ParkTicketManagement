@{
    ViewData["Title"] = "Báo Cáo Thống Kê";
}

<div class="page-heading">
    <div class="d-flex justify-content-between align-items-center">
        <h3>Báo Cáo Thống Kê</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Trang Chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Báo Cáo</li>
            </ol>
        </nav>
    </div>
</div>

<div class="page-content">
    <!-- Report Filters -->
    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">Tạo Báo Cáo</h4>
        </div>
        <div class="card-body">
            <form>
                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="reportType" class="form-label">Loại Báo Cáo</label>
                        <select class="form-select" id="reportType">
                            <option value="revenue">Doanh Thu</option>
                            <option value="vehicle">Hoạt Động Xe</option>
                            <option value="daily">Báo Cáo Hàng Ngày</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="startDate" class="form-label">Từ Ngày</label>
                        <input type="date" class="form-control" id="startDate">
                    </div>
                    <div class="col-md-3">
                        <label for="endDate" class="form-label">Đến Ngày</label>
                        <input type="date" class="form-control" id="endDate">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label d-block">&nbsp;</label>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-file-earmark-arrow-down me-2"></i>Tạo Báo Cáo
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Key Metrics -->
    <div class="row">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Doanh Thu Tháng Này
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">18.500.000đ</div>
                            <small class="text-success"><i class="bi bi-arrow-up"></i> 12% so với tháng trước</small>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-currency-dollar text-primary" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Tổng Xe (Tháng Này)
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">1.842</div>
                            <small class="text-success"><i class="bi bi-arrow-up"></i> 8% so với tháng trước</small>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-car-front-fill text-success" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Tỷ Lệ Lấp Đầy TB
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">71%</div>
                            <small class="text-success"><i class="bi bi-arrow-up"></i> 5% so với tháng trước</small>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-pie-chart-fill text-info" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Thời Gian Gửi TB
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">2.5 giờ</div>
                            <small class="text-danger"><i class="bi bi-arrow-down"></i> 2% so với tháng trước</small>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-clock-fill text-warning" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Xu Hướng Doanh Thu Theo Tháng</h4>
                </div>
                <div class="card-body">
                    <div id="revenueChart"></div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Phân Loại Xe</h4>
                </div>
                <div class="card-body">
                    <div id="vehicleTypeChart"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Reports Tables -->
    <div class="row mt-4">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Top Ngày Doanh Thu Cao</h4>
                    <button class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-download"></i>
                    </button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Ngày</th>
                                    <th>Số Xe</th>
                                    <th>Doanh Thu</th>
                                    <th>TB Gửi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>15/12/2024</td>
                                    <td>142</td>
                                    <td class="text-success font-bold">850.000đ</td>
                                    <td>2.8 giờ</td>
                                </tr>
                                <tr>
                                    <td>14/12/2024</td>
                                    <td>128</td>
                                    <td class="text-success font-bold">780.000đ</td>
                                    <td>2.5 giờ</td>
                                </tr>
                                <tr>
                                    <td>13/12/2024</td>
                                    <td>135</td>
                                    <td class="text-success font-bold">820.000đ</td>
                                    <td>2.6 giờ</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Phân Tích Giờ Cao Điểm</h4>
                    <button class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-download"></i>
                    </button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Khung Giờ</th>
                                    <th>Xe Vào</th>
                                    <th>Xe Ra</th>
                                    <th>Lấp Đầy</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="table-danger">
                                    <td>7:00 - 9:00</td>
                                    <td><span class="badge bg-danger">85</span></td>
                                    <td>22</td>
                                    <td>90%</td>
                                </tr>
                                <tr class="table-warning">
                                    <td>11:00 - 13:00</td>
                                    <td><span class="badge bg-warning">58</span></td>
                                    <td>36</td>
                                    <td>75%</td>
                                </tr>
                                <tr>
                                    <td>16:00 - 18:00</td>
                                    <td>35</td>
                                    <td><span class="badge bg-success">72</span></td>
                                    <td>45%</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/assets/extensions/apexcharts/apexcharts.min.js"></script>
    <script src="~/assets/static/js/components/dark.js"></script>
    <script>
        // Revenue Chart
        var revenueOptions = {
            series: [{
                name: 'Doanh Thu',
                data: [12500000, 14000000, 15500000, 14200000, 16800000, 18500000]
            }],
            chart: {
                type: 'area',
                height: 350,
                toolbar: {
                    show: false
                }
            },
            colors: ['#435ebe'],
            dataLabels: {
                enabled: false
            },
            stroke: {
                curve: 'smooth'
            },
            xaxis: {
                categories: ['Tháng 7', 'Tháng 8', 'Tháng 9', 'Tháng 10', 'Tháng 11', 'Tháng 12']
            },
            yaxis: {
                labels: {
                    formatter: function(val) {
                        return (val / 1000000).toFixed(1) + 'M đ';
                    }
                }
            },
            tooltip: {
                y: {
                    formatter: function(val) {
                        return val.toLocaleString('vi-VN') + ' đ';
                    }
                }
            }
        };
        
        var revenueChart = new ApexCharts(document.querySelector("#revenueChart"), revenueOptions);
        revenueChart.render();

        // Vehicle Type Chart
        var vehicleOptions = {
            series: [85, 57],
            labels: ['Ô tô', 'Xe máy'],
            colors: ['#435ebe', '#f3ba2f'],
            chart: {
                type: 'donut',
                height: 350
            },
            legend: {
                position: 'bottom'
            }
        };
        
        var vehicleChart = new ApexCharts(document.querySelector("#vehicleTypeChart"), vehicleOptions);
        vehicleChart.render();
    </script>
}

