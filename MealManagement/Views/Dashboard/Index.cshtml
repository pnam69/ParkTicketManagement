@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="page-heading">
    <h3>Tổng Quan Bãi Xe</h3>
</div>

<div class="page-content">

    <!-- TOP SUMMARY CARDS -->
    <div class="row">
        <div class="col-6 col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body px-4 py-4-5">
                    <div class="row">
                        <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-start">
                            <div class="stats-icon purple mb-2">
                                <i class="iconly-boldShow"></i>
                            </div>
                        </div>
                        <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">
                            <h6 class="text-muted font-semibold">Tổng Chỗ</h6>
                            <h6 class="font-extrabold mb-0">200</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body px-4 py-4-5">
                    <div class="row">
                        <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-start">
                            <div class="stats-icon blue mb-2">
                                <i class="iconly-boldTicket"></i>
                            </div>
                        </div>
                        <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">
                            <h6 class="text-muted font-semibold">Đang Gửi</h6>
                            <h6 class="font-extrabold mb-0">142</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body px-4 py-4-5">
                    <div class="row">
                        <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-start">
                            <div class="stats-icon green mb-2">
                                <i class="iconly-boldTickSquare"></i>
                            </div>
                        </div>
                        <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">
                            <h6 class="text-muted font-semibold">Còn Trống</h6>
                            <h6 class="font-extrabold mb-0">58</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body px-4 py-4-5">
                    <div class="row">
                        <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-start">
                            <div class="stats-icon red mb-2">
                                <i class="iconly-boldWallet"></i>
                            </div>
                        </div>
                        <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">
                            <h6 class="text-muted font-semibold">Doanh Thu</h6>
                            <h6 class="font-extrabold mb-0">850.000đ</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- SECOND ROW -->
    <div class="row">
        <!-- Recent Activity -->
        <div class="col-12 col-xl-8">
            <div class="card">
                <div class="card-header">
                    <h4>Hoạt Động Gần Đây</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-lg">
                            <thead>
                                <tr>
                                    <th>Mã Vé</th>
                                    <th>Biển Số</th>
                                    <th>Loại Xe</th>
                                    <th>Giờ Vào</th>
                                    <th>Trạng Thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="col-3">
                                        <p class="font-bold mb-0">#VX-001</p>
                                    </td>
                                    <td class="col-auto">
                                        <p class="mb-0">29A-12345</p>
                                    </td>
                                    <td class="col-auto">
                                        <span class="badge bg-primary">Ô tô</span>
                                    </td>
                                    <td class="col-auto">
                                        <p class="mb-0">08:30</p>
                                    </td>
                                    <td class="col-auto">
                                        <span class="badge bg-success">Đang gửi</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-3">
                                        <p class="font-bold mb-0">#VX-002</p>
                                    </td>
                                    <td class="col-auto">
                                        <p class="mb-0">30G-56789</p>
                                    </td>
                                    <td class="col-auto">
                                        <span class="badge bg-warning">Xe máy</span>
                                    </td>
                                    <td class="col-auto">
                                        <p class="mb-0">09:15</p>
                                    </td>
                                    <td class="col-auto">
                                        <span class="badge bg-success">Đang gửi</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-3">
                                        <p class="font-bold mb-0">#VX-003</p>
                                    </td>
                                    <td class="col-auto">
                                        <p class="mb-0">29B-11111</p>
                                    </td>
                                    <td class="col-auto">
                                        <span class="badge bg-primary">Ô tô</span>
                                    </td>
                                    <td class="col-auto">
                                        <p class="mb-0">10:00</p>
                                    </td>
                                    <td class="col-auto">
                                        <span class="badge bg-danger">Đã ra</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Parking Occupancy & Quick Stats -->
        <div class="col-12 col-xl-4">
            <div class="card">
                <div class="card-header">
                    <h4>Tỷ Lệ Lấp Đầy</h4>
                </div>
                <div class="card-body">
                    <div id="chart-visitors-profile"></div>
                    <div class="text-center">
                        <h5 class="mb-3">71% Đã Đầy</h5>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4>Phân Loại Xe</h4>
                </div>
                <div class="card-content pb-4">
                    <div class="recent-message d-flex px-4 py-3">
                        <div class="avatar avatar-lg bg-primary">
                            <i class="bi bi-car-front-fill text-white"></i>
                        </div>
                        <div class="name ms-4">
                            <h5 class="mb-1">Ô tô</h5>
                            <h6 class="text-muted mb-0">85 xe</h6>
                        </div>
                    </div>
                    <div class="recent-message d-flex px-4 py-3">
                        <div class="avatar avatar-lg bg-warning">
                            <i class="bi bi-bicycle text-white"></i>
                        </div>
                        <div class="name ms-4">
                            <h5 class="mb-1">Xe máy</h5>
                            <h6 class="text-muted mb-0">57 xe</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- THIRD ROW - Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4>Thao Tác Nhanh</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a asp-controller="Entry" asp-action="Index" class="btn btn-primary btn-lg w-100">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Xe Vào
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-controller="Exit" asp-action="Index" class="btn btn-success btn-lg w-100">
                                <i class="bi bi-box-arrow-left me-2"></i>Xe Ra
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-controller="Tickets" asp-action="Index" class="btn btn-info btn-lg w-100 text-white">
                                <i class="bi bi-ticket-perforated me-2"></i>Xem Vé
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/assets/extensions/apexcharts/apexcharts.min.js"></script>
    <script src="~/assets/static/js/components/dark.js"></script>
    <script>
        // Parking Occupancy Donut Chart
        var optionsProfileVisit = {
            series: [142, 58],
            labels: ['Đang gửi', 'Còn trống'],
            colors: ['#435ebe', '#55c6a9'],
            chart: {
                type: 'donut',
                width: '100%',
                height: '350px'
            },
            legend: {
                position: 'bottom'
            },
            plotOptions: {
                pie: {
                    donut: {
                        size: '30%'
                    }
                }
            }
        }
        
        var chartProfileVisit = new ApexCharts(document.querySelector("#chart-visitors-profile"), optionsProfileVisit);
        chartProfileVisit.render();
    </script>
}

